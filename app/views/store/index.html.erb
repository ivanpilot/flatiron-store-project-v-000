<h3><%="Signed in as #{current_user.email}" if current_user%></h3>


<h2>Categories</h2>

<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<h2>Items</h2>
<% @items.each do |item| %>
  <p><%= item.title %> | <%= item.inventory %> | <%= number_to_currency(item.price) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
<% end %>
